{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsxImportSource": "solid-js",
        "jsx": "preserve",
        "strict": true,
        "types": [
            "solid-start/env"
        ],
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "include": [
            "**/*.ts",
            "**/*.tsx"
        ]
    }
}
